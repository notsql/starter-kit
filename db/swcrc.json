{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "target": "es2024",
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": false,
      "dynamicImport": true,
      "preserveAllComments": false
    },
    "loose": true,
    "baseUrl": ".",
    "paths": {
      "@db": ["../db"]
    }
  },
  "module": {
    "type": "commonjs",
    "strict": true,
    "strictMode": true,
    "resolveFully": true
  },
  "minify": true
}
